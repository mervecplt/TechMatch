<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_margin="4dp"
    android:elevation="2dp">

    <!-- Takım Adı -->
    <TextView
        android:id="@+id/tvTeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proje Adı"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- Proje Konusu -->
    <TextView
        android:id="@+id/tvProjectDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proje açıklaması buraya gelecek"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <!-- Danışman Hoca -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👨‍🏫 Danışman: "
            android:textSize="14sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/tvAdvisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prof. Dr. Ali Yılmaz"
            android:textSize="14sp"
            android:textColor="#6200EE"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Takım Bilgisi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👥 Takım: "
            android:textSize="14sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/tvTeamSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2/5 kişi"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Katıl Butonu -->
    <Button
        android:id="@+id/btnJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Takıma Katıl"
        android:textColor="#FFFFFF"
        android:background="#6200EE"
        android:textStyle="bold"
        android:padding="12dp"/>

</LinearLayout>