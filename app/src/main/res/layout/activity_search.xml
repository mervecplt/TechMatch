<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Modern Header with Gradient -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gradient_background"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:elevation="4dp">

            <!-- Header Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arama"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"/>
            </LinearLayout>

            <!-- Search Box with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edit_text_background"
                    android:elevation="3dp">

                    <EditText
                        android:id="@+id/etSearchQuery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Ä°sim, beceri veya kategori ara..."
                        android:textColorHint="#9E9E9E"
                        android:textSize="16sp"
                        android:paddingStart="20dp"
                        android:paddingEnd="60dp"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"/>

                    <ImageView
                        android:id="@+id/ivSearchIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Arama"
                        android:tint="#8B5CF6"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Category Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategorilere GÃ¶re Ara"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp"/>

            <!-- Category Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AI Category -->
                <Button
                    android:id="@+id/btnCategoryAI"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="ðŸ¤–  Yapay Zeka"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/button_category_ai"
                    android:elevation="3dp"
                    android:layout_marginBottom="12dp"
                    android:stateListAnimator="@null"/>

                <!-- IoT Category -->
                <Button
                    android:id="@+id/btnCategoryIoT"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="ðŸŒ  IoT"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/button_category_iot"
                    android:elevation="3dp"
                    android:layout_marginBottom="12dp"
                    android:stateListAnimator="@null"/>

                <!-- Mobile Category -->
                <Button
                    android:id="@+id/btnCategoryMobile"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="ðŸ“±  Mobil Uygulama"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@drawable/button_category_mobile"
                    android:elevation="3dp"
                    android:layout_marginBottom="16dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Search Results Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arama SonuÃ§larÄ±"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:padding="8dp"/>

                <ListView
                    android:id="@+id/lvSearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:divider="#E0E0E0"
                    android:dividerHeight="1dp"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>