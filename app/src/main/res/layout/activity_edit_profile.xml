<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FF6200EE"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Profili Düzenle"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Temel Bilgiler -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📝 Temel Bilgiler"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biyografi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kendinden bahset..."
                android:minHeight="80dp"
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beceriler (virgülle ayırarak)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Java, Python, React..."
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Eğitim Bilgileri -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎓 Eğitim"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Üniversite"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etUniversity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Üniversite adı"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mezuniyet Yılı"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etGraduationYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2024"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPA (0-4.0)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etGpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="3.50"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Projeler -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📁 Proje Ekle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-Ticaret Sitesi - MERN stack"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Proje Ekle"
                android:backgroundTint="#03DAC5"/>
        </LinearLayout>

        <!-- İş Deneyimi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💼 İş Deneyimi Ekle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etWorkExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Google - Software Engineer Intern (2023)"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddWorkExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ İş Deneyimi Ekle"
                android:backgroundTint="#03DAC5"/>
        </LinearLayout>

        <!-- Başarılar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏆 Başarı Ekle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/etAchievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hackathon 2023 - 1. lik"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddAchievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Başarı Ekle"
                android:backgroundTint="#03DAC5"/>
        </LinearLayout>

        <!-- Kaydet Butonu -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💾 Profili Kaydet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF6200EE"
            android:layout_margin="16dp"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>