<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvProjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yapay Zeka Tabanlı Sağlık Asistanı"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvProjectCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori: Yapay Zeka"
        android:textSize="14sp"
        android:textColor="#FF6200EE"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvProjectCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proje Sahibi: Ahmet Yılmaz"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvProjectTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takım: 2/4"
        android:textSize="12sp"
        android:textColor="#03DAC5"
        android:layout_marginTop="4dp"/>

</LinearLayout>